{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Wiki-Kids",
  "version": "1.0",
  "description": "A Wikipedia extension for adults and kids.",
  "permissions": ["activeTab", "tabs", "declarativeContent", "storage", "bookmarks", "contextMenus"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Wiki-Kids",
    "default_popup": "popup.html",
    "default_icon": "images/wiki_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["myscripts.js"]
    },
    {
      "matches": ["<all_urls>"],
      "css": ["tooltipstyle.css"]
    }
  ],
  "icons": {
    "16": "images/wiki_logo.png",
    "32": "images/wiki_logo.png",
    "48": "images/wiki_logo.png",
    "128": "images/wiki_logo.png"
  }
}
